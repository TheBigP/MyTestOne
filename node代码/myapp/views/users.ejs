</form>




<table class="table table-hover">
    <tr>
        <th>编号</th>
        <th>姓名</th>
        <th>发件人</th>
        <th>收件人</th>
        <th>内容</th>
        <th>标题</th>
        <th>发送日期</th>
        <th>附件</th>
        <th colspan="3" class="text-center">用户操作</th>
    </tr>
    <% for(var i = 0; i < datas.length; i++) {%>
        <tr class="success">
            <td><%= datas[i].id %></td>
            <td><%= datas[i].name %></td>
            <td><%= datas[i].email_user %></td>
            <td><%= datas[i].email_touser %></td>
            <td><%= datas[i].content %></td>
            <td><%= datas[i].title %></td>
            <td><%= datas[i].to_date %></td>
            <td><a href="/users/download?key=other"><%= datas[i].other %></a></td>

            <td><a href="/users/add" class="btn btn-info">添加</a></td>
            <td><a href="/users/del/<%= datas[i].id %>" class="btn btn-danger">删除</a></td>
            <td><a href="/users/toUpdate/<%= datas[i].id %>" class="btn btn-warning">修改</a></td>
        </tr>
    <% } %>
</table>
