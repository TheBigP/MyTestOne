<form action="/users/search" method="post" class="form-inline">
    <!-- <input type="text" name="s_name" value="<%= datas.name %>"><br> -->

    <div class="form-group has-success has-feedback ">
        <label for="exampleInputName2"><em>姓名：</em></label>
        <input type="text" class="form-control" id="inputSuccess2" placeholder="Jane Doe" name="s_name" value="<%= datas.name %>" >
        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
        <span id="inputSuccess2Status" class="sr-only">(success)</span>
    </div>
    <div class="checkbox">
        <label>
          <input type="checkbox"> Remember me
        </label>
      </div>
    <input type="submit" value="查询" class="btn btn-default">
    <!-- <kbd>Enter</kbd> -->
